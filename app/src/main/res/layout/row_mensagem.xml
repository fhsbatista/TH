<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:gravity="left"
    android:id="@+id/linear_layout_mensagem"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_gravity="end"
        android:visibility="gone"
        android:id="@+id/msg_eu"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/layout_mensagem"
        android:background="@drawable/message"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nomeUsuario_msg"
            android:text="Nome"
            android:textColor="#0070DE"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbtv_mensagem"
            android:text="Mensagem"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time_msg"
            android:layout_gravity="end"
            android:text="dd/mm/aaaa - hh:mm"
            android:layout_marginLeft="5dp"
            />




    </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_gravity="end"
        android:visibility="gone"
        android:id="@+id/msg_terceiro"
        />






</LinearLayout>