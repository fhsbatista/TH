<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context="talkhub.com.br.th.AddMembroProjetoActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_addMembrosProjeto"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible"
        app:titleTextColor="@color/menu"
        android:theme="@style/menuDaMain"
        app:popupTheme="@style/popUpMenuDaMain"/>

    <EditText
        style="@style/editText_style"
        android:hint="Insira um termo para pesquisa"
        android:id="@+id/et_pesquisa_projeto"
        android:inputType="text"/>

    <Button
        style="@style/button_style"
        android:text="Procurar"
        android:id="@+id/bt_pesquisar_projeto"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_pesquisa_usuarios_projeto">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
