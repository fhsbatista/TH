<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="talkhub.com.br.th.MuralEquipeActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_muralequipe"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible"
        app:titleTextColor="@color/menu"
        android:theme="@style/menuDaMain"
        app:popupTheme="@style/popUpMenuDaMain"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleMuralEquipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bgcolor"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/etMensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="O que vocÃª tem a dizer?"
                android:layout_weight="1"
                android:inputType="text"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:src="@drawable/ic_send_black_18dp" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
